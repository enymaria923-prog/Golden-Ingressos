'use client';
import { useState } from 'react';
import { createClient } from '../../utils/supabase/client';

export default function FavoritoButton({ eventoId, isFavoritoInicial }) {
  const [isFavorito, setIsFavorito] = useState(isFavoritoInicial);
  const [loading, setLoading] = useState(false);
  const supabase = createClient();

  const toggleFavorito = async (e) => {
    e.preventDefault();
    e.stopPropagation();

    if (loading) return;
    setLoading(true);

    try {
      const { data: { user } } = await supabase.auth.getUser();
      
      if (!user) {
        alert('Voc√™ precisa estar logado para favoritar eventos!');
        setLoading(false);
        return;
      }

      if (isFavorito) {
        // Remove dos favoritos
        const { error } = await supabase
          .from('favoritos')
          .delete()
          .eq('user_id', user.id)
          .eq('evento_id', eventoId);

        if (error) throw error;
        setIsFavorito(false);
      } else {
        // Adiciona aos favoritos
        const { error } = await supabase
          .from('favoritos')
          .insert([{
            user_id: user.id,
            evento_id: eventoId
          }]);

        if (error) throw error;
        setIsFavorito(true);
      }
    } catch (error) {
      console.error('Erro ao favoritar:', error);
      alert('Erro ao favoritar evento. Tente novamente.');
    } finally {
      setLoading(false);
    }
  };

  return (
    <button
      onClick={toggleFavorito}
      disabled={loading}
      style={{
        backgroundColor: 'white',
        border: 'none',
        borderRadius: '50%',
        width: '40px',
        height: '40px',
        display: 'flex',
        alignItems: 'center',
        justifyContent: 'center',
        cursor: loading ? 'wait' : 'pointer',
        boxShadow: '0 2px 8px rgba(0,0,0,0.2)',
        fontSize: '20px',
        transition: 'all 0.3s',
        opacity: loading ? 0.6 : 1
      }}
      onMouseOver={(e) => {
        if (!loading) e.target.style.transform = 'scale(1.1)';
      }}
      onMouseOut={(e) => {
        e.target.style.transform = 'scale(1)';
      }}
    >
      {isFavorito ? '‚ù§Ô∏è' : 'ü§ç'}
    </button>
  );
}
